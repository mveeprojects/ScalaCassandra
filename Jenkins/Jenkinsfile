pipeline {
    agent any

    stages {

        stage('Run all tests') {
            steps {
                sh '''#!/bin/bash
                	echo "Testing code..."
                	sudo ./sbt runAllTests
                	echo "Done testing"
         		'''
            }
        }

        stage('Deploy') {
            steps {
                sh '''#!/bin/bash
                    echo "Redeploying the app ..."
                    sudo ./sbt redeployApp
                    echo "App has been deployed"
                '''
            }
        }
    }
}